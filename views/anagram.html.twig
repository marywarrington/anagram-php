        </form>
        <h2>RESULTS ARE ALL THAT MATTERS</h2>
        <h3>Matches</h3>
        <ul>
            {% for match in matches %}
                <li>{{ match }}</li>
            {% endfor %}
        </ul>
        <h3>FAILS</h3>
        <ul>
            {% for fail in fails %}
                <li>{{ fail }}</li>
            {% endfor %}
        </ul>
    </body>
</html>
